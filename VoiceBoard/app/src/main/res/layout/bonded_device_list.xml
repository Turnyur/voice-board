<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bondedDevicesView"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="#1e1e1D"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#1e1e1D"
        android:src="@drawable/bonded_bt" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@drawable/bondlist_state"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/DeviceNamefromList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="Device Name"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#8800A0FF"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/deviceMACfromList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="3"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text="Device MAC Address"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#7702EA11"
                android:textSize="19sp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right"
                android:layout_marginRight="0dp"
                android:layout_weight="1"
                android:src="@drawable/ic_menu_right" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>