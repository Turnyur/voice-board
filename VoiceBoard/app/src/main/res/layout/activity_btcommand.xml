<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_btcommand"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="1dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="3dp"
    tools:context="info.androidhive.dano_notice_board.BTCommandActivity"
    android:background="@drawable/bg2"
    android:orientation="vertical">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="20dp"
            android:layout_marginBottom="1dp"
            android:background="#111111">

            <ImageView
                android:id="@+id/bt_img1"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@drawable/apps_bluetoothtransfer"
                android:layout_width="70dp" />
            <TextView
                android:text="Establishing Connection..."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_of_connection"
                android:layout_weight="0.20"
                android:textSize="18sp"
                android:textAlignment="center"
                android:textStyle="normal|bold"
                android:textColor="@color/blue"
                android:layout_gravity="center_vertical"
                android:paddingLeft="10dp" />

        </LinearLayout>

        <TextView
            android:text="Announcement!"
            android:layout_width="match_parent"
            android:id="@+id/r_command"
            android:layout_weight="0.3"
            android:textSize="30sp"
            android:textColor="#eeeeee"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:background="#50000000" />

        <TextView
            android:text="UnKnown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/main_comm_bt"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="36sp"
            android:gravity="center"
            android:background="#2C2C2C" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#50000000"
        android:gravity="top|center">

        <ImageButton
            android:id="@+id/connection_est"
            android:background="@null"
            android:src="@drawable/connect_button"
            android:layout_width="150dp"
            android:layout_height="142dp" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/bon_devices_listv "
            android:background="#90222222" />

    </LinearLayout>



</LinearLayout>
